<%= render 'layouts/header' %>
<div class="d-flex flex-column justify-content-center align-items-center mt-5">
  <div class="mt-3">
    <h1 class="main_sentense sign_up_index wf-sawarabi"><%= t('.sign_up') %></h1>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="mt-3">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="sign_up_index">
        <%= f.label :name, class: "normal_sentense wf-sawarabi" %><br />
        <%= f.text_field :name, placeholder: t('activerecord.attributes.user.name'), autofocus: true, autocomplete: "name" %>
      </div>

      <div class="sign_up_index">
        <%= f.label :email, class: "normal_sentense wf-sawarabi" %><br />
        <%= f.email_field :email, placeholder: t('activerecord.attributes.user.email'), autocomplete: "email" %>
      </div>

      <div class="sign_up_index">
        <%= f.label :password, class: "normal_sentense wf-sawarabi" %>
        <% if @minimum_password_length %>
        <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
        <% end %><br />
        <%= f.password_field :password, placeholder: t('activerecord.attributes.user.password'), autocomplete: "new-password" %>
      </div>

      <div class="sign_up_index">
        <%= f.label :password_confirmation, class: "normal_sentense wf-sawarabi" %><br />
        <%= f.password_field :password_confirmation, placeholder: t('activerecord.attributes.user.password_confirm'), autocomplete: "new-password" %>
      </div>

      <div class="my-5 pl-1">
        <%= f.submit t('.sign_up'), class: "button_design sign_up_button sign_up_index food_text wf-sawarabi" %>
      </div>
    <% end %>
  </div>
</div>

