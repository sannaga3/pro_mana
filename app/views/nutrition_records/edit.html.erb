<div class="main_wrapper">
  <div class="nutrition_record_main_wrapper d-flex flex-row justify-content-around">
    <div class="side_bar_container ">
      <%= render 'layouts/side_bar' %>
    </div>
    <div class="nutrition_record_form_wrapper">
      <div class="d-flex flex-column justify-content-center align-items-center p-3">
        <div>
          <h1 class="main_title p-2"><%= t('view.record_edit') %></h1>
        </div>
        <div class="nutrition_record_form_container justify-content-center align-items-center scroll">
          <%= render 'form', record: @record %>
        </div>
        <div class="row justify-content-center mt-3">
          <%= link_to t('view.back'), :back, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>