<%= form_with(model: @bmi, local: true ) do |f| %>
  <div class="col-12 col-sm-6 col-lg-6"><%= f.label :height %></div>
  <div class="col-12 col-sm-6 col-lg-4"><%= f.number_field :height, min: '1', placeholder: t('view.input_integer') %>cm</div>
  <div class="col-12 col-sm-6 col-lg-6"><%= f.label :weight %></div>
  <div class="col-12 col-sm-6 col-lg-4"><%= f.number_field :weight, min: '0.1' ,step: '0.1', placeholder: t('view.input_float'), autofocus: true %>kg</div>
  <%= f.date_field :record_on, value: Time.now.strftime("%Y-%m-%d") %>
  <%= f.hidden_field :status, value: (resource.weight / resource.height * resource.height) %>
  <%= f.hidden_field :user_id, value:current_user.id %>
  <%= f.submit 'submit' %>
<% end %>
<%= link_to "bmi作成", new_bmi_path, class: "button_text_color" %>