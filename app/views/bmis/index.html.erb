<div class="d-flex flex-column justify-content-center align-items-center container bmi_wrapper">
  <div>
    <h1 class="food_text"><%= "BMI一覧" %></h1>
  </div>
  <div class="row row_index">
    <div class="col-3"><%= "日付" %></div>
    <div class="col-3"><%= "BMI" %></div>
    <div class="col-3"><%= "身長" %></div>
    <div class="col-3"><%= "体重" %></div>
  </div>
  <% if @bmis!= nil %>
    <% @bmis.each do |bmi| %>
      <div class="row row_index">
        <div class="col-3"><%= bmi.record_on %></div>
        <div class="col-3"><%= bmi.status %></div>
        <div class="col-3"><%= bmi.height %></div>
        <div class="col-3"><%= bmi.weight %></div>
      </div>
    <% end %>
  <% end %>
  <div class="button_design mt-5">
    <%= link_to "bmi作成", new_bmi_path, class: "button_text_color" %>
  </div>
</div>
