<div class="simple-calendar">
  <div class="calendar-heading box25">
    <%= link_to t('view.previous_month'), calendar.url_for_previous_view %>
    <span class="calendar-title"><%= "#{start_date.year}å¹´ " %><%= t('date.month_names')[start_date.month] %></span>
    <%= link_to t('view.next_month'), calendar.url_for_next_view %>
  </div>

  <table class="table table_border">
    <thead class="table_border">
      <tr class="table_border">
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody class="table_border">
      <% date_range.each_slice(7) do |week| %>
        <tr class="table_border">
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% if defined?(Haml) && respond_to?(:block_is_haml?) && block_is_haml?(passed_block) %>
                <% capture_haml(day, sorted_events.fetch(day, []), &passed_block) %>
              <% else %>
                <% passed_block.call day, sorted_events.fetch(day, []) %>
              <% end %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
