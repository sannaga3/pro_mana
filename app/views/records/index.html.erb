<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Food_Name</th>
      <th>Protain</th>
      <th>Quantity</th>
      <th>Unit</th>
      <th>Ate</th>
      <th>Date</th>
      <th>User_Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @records != nil %>
      <% @records.each do |record| %>
        <% food = Food.find(record.food_id) %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.protain %>g</td>
          <td><%= food.quantity %></td>
          <td><%= food.unit %></td>
          <td><%= record.ate %></td>
          <td><%= record.record_on %></td>
          <td><%= link_to "#{record.user.name}", user_path(record.user.id) %></td>
          <% if current_user == record.user %>
            <td><%= link_to 'Show', record_path(record.id) %></td>
            <td><%= link_to 'Edit', edit_record_path(record.id) %></td>
            <td><%= link_to 'Destroy', record_path(record.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
