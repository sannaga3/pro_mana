<div class="d-flex flex-column justify-content-center align-items-center">
  <div>
    <h1 class="main_title"><%= t('view.follow_list') %></h1>
  </div>
  <div class="mt-3">
    <h4>フォロー方法: <%= link_to t('view.records_index'), nutrition_records_path %> → ユーザー名 → 個別のプロフィールページでフォローする</h4>
  </div>
  <div class="paginate_box rounded mt-3">
    <%= paginate @followed_users, window: 3 %>
  </div>
  <table class="mt-2">
    <thead>
      <tr>
        <th class="follow_th_width"><%= t('view.user_name') %></th>
        <th class="follow_th_width"><%= t('view.follow_or_unfollow') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @followed_users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user_path(user.id) %></td>
          <td>
            <%= render 'follow_form', user: user %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="paginate_box rounded mt-3">
    <%= paginate @followed_users, window: 3 %>
  </div>
</div>