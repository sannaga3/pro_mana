<div class="row">
  <div class="col-2">
    <%= render 'layouts/side_bar' %>
  </div>
  <div class="food_form_wrapper col-7 offset-1">
    <div class="d-flex flex-column justify-content-center align-items-center p-3">
      <div>
        <h1 class="main_title"><%= t('view.food_edit') %></h1>
      </div>
      <div class="food_form_container justify-content-center align-items-center">
        <%= render 'form', food: @food %>
      </div>
      <div class="row col-10 justify-content-center my-4">
        <%= link_to t('view.back'), :back, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>