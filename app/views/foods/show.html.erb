<div class="main_wrapper">
  <div class="food_main_wrapper d-flex flex-row justify-content-around">
    <div class="side_bar_container">
      <%= render 'layouts/side_bar' %>
    </div>
    <div class="food_show_wrapper">
      <div class="d-flex flex-column justify-content-center align-items-center p-3">
        <h1 class="main_title text-center p-3"><%= t('view.food_show') %><%= render 'layouts/flash_message' %></h1>
        <div class="food_show_container scroll">
          <div class="d-flex flex-column justify-content-center mt-5">
            <div class="content_border"></div>
            <div class="d-flex flex-row justify-content-center content_border">
              <div class="food_item_large"><%= t('activerecord.attributes.food.protein')%></div>
              <div class="food_item_middle"><%= t('activerecord.attributes.food.protein')%></div>
              <div class="food_item_middle"><%= t('activerecord.attributes.food.quantity')%></div>
              <div class="food_item_small"><%= t('activerecord.attributes.food.unit')%></div>
            </div>
            <div class="d-flex flex-row justify-content-center content_border">
              <div class="food_item_large"><%= @food.name %></div>
              <div class="food_item_middle"><%= "#{@food.protein}g" %></div>
              <div class="food_item_middle"><%= @food.quantity %></div>
              <div class="food_item_small"><%= @food.unit %></div>
            </div>
          </div>
        </div>
        <div class="d-flex flex-row justify-content-center align-items-center">
          <%= link_to t('view.edit'), edit_food_path(@food.id), class: "btn btn-primary mt-4 mx-4" %>
          <%= link_to t('view.back'), foods_path, class: "btn btn-secondary mt-4 mx-4" %>
        </div>
      </div>
    </div>
  </div>
</div>